<?xml version = "1.0"?>
<robot name ="my_robot">

    <material name ="grey">
        <color rgba="0.7 0.7 0.7 1"/>
    </material>

    <material name ="green">
        <color rgba="0 0.6 0 1"/>
    </material>
    <material name ="white">
        <color rgba="1 1 1 1"/>
    </material>

    <link name='base_link'>
        <!-- <inertial>
            <mass value=".1"/>
            <inertia ixx=".1"  ixy="0"  ixz="0" iyy=".1" iyz="0" izz=".075" />
        </inertial> -->

        <visual>
            <origin xyz ="0 0 1" rpy = "1.57 0 0"/>
            <material name ="white"/>
            <geometry>
                <box size=".05 .05 2"/>
            </geometry>
        </visual>
    </link>

    <link name='left_rod'>
        <inertial>
            <mass value=".1"/>
            <inertia ixx=".1"  ixy="0"  ixz="0" iyy=".1" iyz="0" izz=".075" />
        </inertial>

        <visual>
            <origin xyz ="0 -1 .5" rpy = "0 0 0"/>
            <material name ="white"/>
            <geometry>
                <box size =".05 .05 1"/>
            </geometry>
        </visual>
    </link>

    <link name='right_rod'>
        <inertial>
            <mass value=".1"/>
            <inertia ixx=".1"  ixy="0"  ixz="0" iyy=".1" iyz="0" izz=".075" />
        </inertial>

        <visual>
            <origin xyz ="0 1 .5" rpy = "0 0 0"/>
            <material name ="white"/>
            <geometry>
                <box size=".05 .05 1"/>
            </geometry>
        </visual>
    </link>

    <link name='central_piece'>
        <inertial>
            <mass value=".1"/>
            <inertia ixx=".1"  ixy="0"  ixz="0" iyy=".1" iyz="0" izz=".075" />
        </inertial>

        <visual>
            <origin xyz ="0 0 1.06" rpy = "1.57 0 0"/>
            <material name ="grey"/>
            <geometry>
                <box size=".07 .07 .05"/>
            </geometry>
        </visual>
    </link>

    <link name='pendulum'>
        <inertial>
            <mass value=".1"/>
            <inertia ixx=".1"  ixy="0"  ixz="0" iyy=".1" iyz="0" izz=".075" />
        </inertial>
   
        <visual>
            <origin xyz ="0 0 -.15" rpy = "0 0 0"/>
            <material name ="green"/>
            <geometry>
                <box size=".05 .05 0.3"/>
            </geometry>
        </visual>
    </link>

    <joint name ="central_piece_joint" type="prismatic">
        <parent link="base_link"/>
        <child link="central_piece"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz ="0 1 0"/>
        <limit effort="1000.0" lower="-.9" upper=".9" velocity="0.5"/>
    </joint>

    <joint name ="pendulum_joint" type="continuous">
        <parent link="central_piece"/>
        <child link="pendulum"/>
        <origin xyz="0.06 0 1.06" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
    </joint>

    <joint name ="right_rod_joint" type="fixed">
        <parent link="base_link"/>
        <child link="right_rod"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <joint name ="left_rod_joint" type="fixed">
        <parent link="base_link"/>
        <child link="left_rod"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!--Adding gazebo plugins-->
    <gazebo>
        <physics type="ode">
            <max_step_size>0.001</max_step_size>
            <real_time_factor>1</real_time_factor>
            <real_time_update_rate>1000</real_time_update_rate>
            <solver>
                <type>quick</type>
                <iters>50</iters>
                <sor>1.3</sor>
            </solver>
            <constraints>
                <cfm>0.0</cfm>
                <erp>0.2</erp>
            </constraints>
        </physics>
    </gazebo>
</robot>